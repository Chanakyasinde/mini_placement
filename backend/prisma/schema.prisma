generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Students {
  student_id       Int      @id @default(autoincrement())
  studentName     String
  password         String
  phoneNumber     BigInt   @unique
  email            String   @unique
  college          String   @default("Unknown")
  resume_link      String
}

model companies {
  companyId      Int      @id @default(autoincrement())
  companyName    String   @unique
  email          String   @unique
  password       String?
  websiteUrl     String?
  companyType    String?
  industry       String?
  location       String?
  createdAt      DateTime @default(now())
  jobs           jobs[]
}

model Admins {
  admin_id    Int      @id @default(autoincrement())
  admin_name  String
  email       String   @unique
  createdAt   DateTime @default(now())
}
model jobs {
  jobId      Int        @id @default(autoincrement())
  companyId   Int
  company     companies  @relation(fields: [companyId], references: [companyId])
  jobTitle   String
  isActive    Boolean    @default(true)
  stipend     String?
  description String?
  createdAt   DateTime   @default(now())
  skills      skills[]   @relation("JobSkills")
}
model skills{
  skillId   Int @id @default(autoincrement())
  skillName String @unique
  jobs  jobs[]   @relation("JobSkills")
}
